<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/placementinvestigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placement Investigation"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/generalinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="General Information"
            android:textColor="@color/black"
            android:textSize="25sp"
            />

        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/investigatoid"
            android:hint="Investigation ID"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/investigatorname"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginTop="40dp"
            android:hint="Investigator's Name"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
             />

        <EditText
            android:id="@+id/typeofplacement"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:hint="Type of placement"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/candidatedetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Candidate Details"
            android:textColor="@color/black"
            android:textSize="25sp"
            />

        <EditText
            android:id="@+id/candidatename"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginTop="25dp"
            android:hint="Candidate Name"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
             />


        <EditText
            android:id="@+id/dateofinvestigation"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:hint="Date of Investigation"
            android:inputType="date"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/candidatecontactinfo"
            android:inputType="number"
            android:hint="Candidate's Contact Information"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/educationalbackground"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textLongMessage"
            android:layout_marginTop="40dp"
            android:hint="Educaational Background"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/placementdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
