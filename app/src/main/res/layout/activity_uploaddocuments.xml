            android:hint="Experience With The Placement Process"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            />

        <EditText
            android:id="@+id/satisfactionwiththeoffer"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:hint="Satisfaction With The Offer"
            android:inputType="textLongMessage"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/additionalcomments"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textLongMessage"
            android:layout_marginTop="40dp"
            android:hint="Additional Comments"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
             />

        <TextView
            android:id="@+id/additionalnotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Additional Notes"
            android:textColor="@color/black"
            android:textSize="25sp"
            />

        <EditText
            android:id="@+id/additonalinfo"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textLongMessage"
            android:layout_marginTop="40dp"
            android:hint="Additional Information"
            android:padding="8dp"
            android:textColor="@color/black"
